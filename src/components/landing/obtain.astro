  } */

  .x-line::before,
  .x-line::after {
    content: '';
    position: absolute;
    width: 100%;
    height: 7px;
    background-color: #8a4f01;
    top: 50%;
    left: 0;
    transform-origin: center;
  }

  .x-line::before {
    transform: rotate(10deg);
  }

  .x-line::after {
    transform: rotate(-10deg);
  }

  .no-line-through {
    text-decoration: none !important;
  }

  .bgd {
    background: linear-gradient(45deg, #513a01, #ffbb00);
  }

  .border-gradient {
    position: relative;
    border-radius: 60px;
  }

  .border-gradient::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;
    border-radius: inherit;
    padding: 8px;
    background: linear-gradient(45deg, #513a01, #ffbb00);
    -webkit-mask:
      linear-gradient(white, white) content-box,
      linear-gradient(white, white);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
  }

  @media (max-width: 720px) {

    .border-gradient::before {
      padding: 4px;
    }

    .x-line::before {
      height: 5px;
    }

    .x-line::after {
      height: 5px;
    }
  }
</style>
